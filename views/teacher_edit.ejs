<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teacher Edit</title>
  </head>
  <body>
    <h1>Teacher Edit</h1>
    <a href="/">Return to Home</a><br><br>
    <form class="" action="/teacher/edit/<%=data.id%>" method="post">
      First Name <br>
      <input type="text" name="first_name" value="<%=data.first_name%>" placeholder="first name"><br>
      Last Name <br>
      <input type="text" name="last_name" value="<%=data.last_name%>" placeholder="last code"> <br>
      Email <br>
      <input type="text" name="email" value="<%=data.email%>" placeholder="email"> <br>
      Gender <br>
      <select class="" name="gender">
        <%if (gender){gender.forEach(rows=>{%>
          <%if (rows.gender==data.gender){%>
            <option value="<%=rows.gender%>" selected><%=rows.gender%></option>
          <%} else {%>
            <option value="<%=rows.gender%>"><%=rows.gender%></option>
          <%}%>
        <%})}%>
      </select><br><br>
      <button type="submit" name="button">Edit Data</button>
    </form>
  </body>
</html>
