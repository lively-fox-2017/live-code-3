<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Student</title>
  </head>
  <body>
    <form action="/student/update/<%= dataRows.id %>" method="post">
      First Name <input type="text" name="first_name" placeholder="First Name" value="<%= dataRows.first_name %>"><br>
      Last Name <input type="text" name="last_name" placeholder="Last Name" value="<%= dataRows.last_name %>"><br>
      Email <input type="text" name="email" placeholder="Email" value="<%= dataRows.email %>"><br>
      Gender
      <select name="gender">
        <option value="male" <% if(dataRows.gender == 'male')%> <%='selected' %>>Male</option>
        <option value="female" <% if(dataRows.gender == 'female')%> <%='selected' %>>Female</option>
      </select>
      <br>
      <input type="submit" value="SUBMIT">
    </form>
  </body>
</html>
