<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Subject</title>
  </head>
  <body>
    <a href="/">BACK</a>
    <table align="center" border="1">
      <thead>
        <tr>
          <td>ID</td>
          <td>Subject Name</td>
          <td>Subject Code</td>
          <td>Action</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% dataSubject.forEach((row) => {%>
            <td><%= row.id%></td>
            <td><%= row.subject_name%></td>
            <td><%= row.subject_code%></td>
            <td><a href="/subject/edit/<%= row.id%>">Edit</a> | <a href="/subject/delete/<%= row.id%>">Delete</a> | <a href="#">Add Student</a></td>
          <%})%>
        </tr>
      </tbody>
    </table><hr />

    <form action="/subject/insert" method="post">
      <label>Subject Name</label><br>
      <input type="text" name="subject_name" required><br>
      <label>Subject Code</label><br>
      <input type="text" name="subject_code" required><br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
