<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Student Data</title>
  </head>
  <body>
    <a href="/">Back</a>
    <h2><%= message %></h2>
    <table border='5'>
      <tr>
        <td>ID</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Email</td>
        <td>Gender</td>
        <td colspan='3'>Action</td>
      </tr>
      <%
        for(var i = 0;i<dataRows.length;i++) {
          %>
          <tr>
            <td><%= dataRows[i].id %></td>
            <td><%= dataRows[i].first_name %></td>
            <td><%= dataRows[i].last_name %></td>
            <td><%= dataRows[i].email %></td>
            <td><%= dataRows[i].gender %></td>
            <td><a href="/student/update/<%= dataRows[i].id %>">Edit</a></td>
            <td><a href="/student/delete/<%= dataRows[i].id %>">Delete</a></td>
            <td><a href="/student/subject/<%= dataRows[i].id %>">Subject Assigned</a></td>
          </tr>
          <%
        }
      %>
    </table>
    <a href="/student/add">Add New Data</a>
  </body>
</html>
