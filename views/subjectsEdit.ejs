<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Halaman Subjects</title>
  </head>
  <body>
    <h1>Halaman Subjects</h1>
    <a href="/">Back to Home</a>
    <table border="1"="width:25%">
      <thead>
        <tr>
          <th>ID</th>
          <th>Subject Name</th>
          <th>Subject Code</th>
        </tr>
      </thead>
      <tbody>
        <%dataSubjects.forEach(rows =>{ %>
          <tr>
            <td><%=rows.id%></td>
            <td><%=rows.subject_name%></td>
            <td><%=rows.subject_code%></td>
          </tr>
        <%})%>
      </tbody>
   </table>
   <br>
   <form action="/subjects/update/<%=dataSubjects[0].id%>" method="POST">
     <fieldset>
       <br><br>
       <legend>Edit Data Subjects:</legend>
       subject_name:<br>
       <input type="text" name="subject_name" value="<%=dataSubjects[0].subject_name%>" placeholder="subject_name">
       <br>
       Subject Code:<br>
       <input type="text" name="subject_code" value="<%=dataSubjects[0].subject_code%>" placeholder="subject_code">
       <br><br>
       <input type="submit" value="SUBMIT">
     </fieldset>
   </form>
  </body>
</html>
