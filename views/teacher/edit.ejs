<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>TEACHERS</title>
  </head>
  <body>
    <h1>TEACHERS</h1>

    <form action="/teacher/edit/:id" method="POST">
      First name:<br>
      <input type="text" name="first_name" value="<%= teacher.first_name %>">
      <br>
      Last name:<br>
      <input type="text" name="last_name" value="<%= teacher.last_name %>">
      <br>
      Email:<br>
      <input type="text" name="email" value="<%= teacher.email %>">
      <br>
      Gender:<br>
      <input type="text" name="gender" value="<%= teacher.gender %>">
      <br><br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
