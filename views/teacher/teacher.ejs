<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>TEACHERS</title>
  </head>
  <body>
    <h1>TEACHERS</h1>
    <table border="1px">
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Options</th>
      </tr>
      <% for(let i=0; i<teacher.length; i++){ %>
        <tr>
          <td><%= teacher[i].id %></td>
          <td><%= teacher[i].first_name %></td>
          <td><%= teacher[i].last_name %></td>
          <td><%= teacher[i].email %></td>
          <td><%= teacher[i].gender %></td>
          <td>
            <a href="/teacher/edit/<%= teacher[i].id %>">EDIT</a>
            <a href="/teacher/delete/<%= teacher[i].id %>">DELETE</a>
          </td>
        </tr>
      <% } %>
    </table>

    <form action="/teacher" method="POST">
      First name:<br>
      <input type="text" name="first_name" value="">
      <br>
      Last name:<br>
      <input type="text" name="last_name" value="">
      <br>
      Email:<br>
      <input type="text" name="email" value="">
      <br>
      Gender:<br>
      <input type="text" name="gender" value="">
      <br><br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
